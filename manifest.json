{
  "manifest_version": 2,
  "name": "Sicher zahlen",
  "version": "1.0",
  "description": "Die SicherZahlen prüft automatisch, ob eine Website HTTPS verwendet, was die Sicherheit der Verbindung erhöht. ",
  "icons": {
    "128": "std-128.png"
  },
  "browser_action": {
    "default_icon": "std-128.png",
    "default_popup": "popup.html",
    "default_title": "Sicher zahlen"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "*://*/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
